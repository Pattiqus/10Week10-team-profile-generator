{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "style/*": [ "src/assets/scss/*" ],
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "types"],
  "exclude": ["node_modules", ".vscode"]
}
